#! /usr/bin/env bash
set -o errexit
set -o pipefail

### Check cmd exist
chkcmd "git"
chkcmd "npm"

### Check is node project exist
chkfile package.json
chkfile package-lock.json

## Check node_modules exist
chkdir node_modules

### Check Major version
set +o errexit
npm outdated
COMMIT_MSG_BODY="$(npm outdated --json | jq -cr 'to_entries[] | select( .value.current != .value.wanted ) | "- \(.key) \(.value.current) -> \(.value.wanted)" ')"
set -o errexit

if ! [ "$COMMIT_MSG_BODY" = "" ]; then
  ### Upgrade packages
  npm update --save

  ### Add to git
  git add package.json
  git add package-lock.json
  git commit -m "fix(deps): update all non-major dependencies" -m "$COMMIT_MSG_BODY" -m "by depsup script"
  git push

  ### Check Major version again
  npm outdated
fi
